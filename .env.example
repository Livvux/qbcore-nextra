# Plunk Email Service Configuration
PLUNK_PUBLIC_KEY=your_plunk_public_key_here
PLUNK_SECRET_KEY=your_plunk_secret_key_here
PLUNK_WELCOME_ACTION_ID=your_welcome_action_id_here

# Amazon Product Advertising API v5 Configuration
# DO NOT commit real API keys to version control!

# Amazon PA API Credentials (REPLACE WITH YOUR ACTUAL KEYS)
AMAZON_ACCESS_KEY=YOUR_ACCESS_KEY_HERE
AMAZON_SECRET_KEY=YOUR_SECRET_KEY_HERE

# Supported Markets
AMAZON_MARKETS=DE,US,UK

# Partner Tags per Market (REPLACE WITH YOUR TAGS)
AMAZON_TAG_DE=yourtag-21
AMAZON_TAG_US=yourtag-20
AMAZON_TAG_UK=yourtag-21

# API Endpoints per Market
AMAZON_HOST_DE=webservices.amazon.eu
AMAZON_REGION_DE=eu-west-1
AMAZON_HOST_US=webservices.amazon.com
AMAZON_REGION_US=us-east-1
AMAZON_HOST_UK=webservices.amazon.eu
AMAZON_REGION_UK=eu-west-1

# Cache Configuration (PA API Compliance)
AMAZON_CACHE_TTL_SECONDS=86400
AMAZON_STALE_THRESHOLD_MS=86400000

# Rate Limiting (PA API Limits)
AMAZON_API_RATE_LIMIT=1
AMAZON_API_RATE_INTERVAL=1000
AMAZON_MAX_RETRIES=3
AMAZON_RETRY_DELAY=2000

# Development Environment
NODE_ENV=development
